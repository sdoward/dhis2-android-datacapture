<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:grid="http://schemas.android.com/tools"
    android:background="@drawable/card_background"
    android:orientation="vertical"
    android:padding="8dp">

    <!--<include layout="@layout/listview_row_label" />-->

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="25sp"
        android:id="@+id/text_label"
        android:padding="8dp"/>

    <!--<org.dhis2.mobile.ui.views.FontEditText-->
        <!--android:id="@+id/edit_integer_pos_row"-->
        <!--style="@style/ListViewEditTextStyle"-->
        <!--android:hint="@string/enter_integer_positive_or_zero"-->
        <!--android:imeOptions="actionNext|flagNoExtractUi"-->
        <!--android:inputType="number"-->
        <!--app:font="@string/regular_font_name"/>-->

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:rowCount="2"
        android:columnCount="2"
        android:orientation="horizontal"
        android:padding="8dp">

    <android.support.design.widget.TextInputLayout
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        grid:layout_column="0"
        grid:layout_row="0"
        grid:layout_columnWeight="1"
        grid:layout_gravity="fill"
        android:id="@+id/edit_integer_pos_layout"

        >
        <!-- cases integer row-->
        <EditText
            android:id="@+id/edit_integer_pos_row"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:imeOptions="actionNext|flagNoExtractUi"
            android:inputType="number"
            />

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        grid:layout_column="1"
        grid:layout_row="0"
        grid:layout_columnWeight="1"
        grid:layout_gravity="fill"
        android:id="@+id/edit_integer_pos_layout_2"
        >
        <!-- cases integer row-->
        <EditText
            android:id="@+id/edit_integer_pos_row_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:imeOptions="actionNext|flagNoExtractUi"
            android:inputType="number"
            />

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="180dp"
            android:layout_height="wrap_content"
            grid:layout_columnWeight="1"
        grid:layout_row="1"
        grid:layout_column="0"
            grid:layout_gravity="fill"
            android:id="@+id/edit_integer_pos_layout_3"
            >
            <!-- cases integer row-->
            <EditText
                android:id="@+id/edit_integer_pos_row_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:imeOptions="actionNext|flagNoExtractUi"
                android:inputType="number"
                />

    </android.support.design.widget.TextInputLayout>


        <android.support.design.widget.TextInputLayout
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            grid:layout_columnWeight="1"
            grid:layout_row="1"
            grid:layout_column="1"
            grid:layout_gravity="fill"
            android:id="@+id/edit_integer_pos_layout_4"
            >
            <!-- cases integer row-->
            <EditText
                android:id="@+id/edit_integer_pos_row_4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:imeOptions="actionNext|flagNoExtractUi"
                android:inputType="number"
                />

        </android.support.design.widget.TextInputLayout>

    </GridLayout>


</LinearLayout>